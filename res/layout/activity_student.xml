<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context="com.mattih.studentactivitymanagemet.StudentActivity"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/view_schedule_btn"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/manage_schedule_btn"
        android:layout_below="@+id/mk_schedule_btn"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_style"
        android:text="@string/view_schedule_text" />

    <Button
        android:id="@+id/manage_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_schedule_btn"
        android:background="@drawable/btn_style"
        android:text="Manage Account" />

    <Button
        android:id="@+id/manage_schedule_btn"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/manage_account_btn"
        android:background="@drawable/btn_style"
        android:text="Manage Schedule" />

    <Button
        android:id="@+id/mk_schedule_btn"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_style"
        android:text="@string/make_schedule_text" />

</RelativeLayout>